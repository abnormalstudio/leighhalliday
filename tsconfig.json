{
  "include": ["./src/**/*"],
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["dom", "es2017"],
    "jsx": "react",
    "strict": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "$components/*": ["components/*"],
      "$components": ["components"],
      "$articles/*": ["content/articles/*"],
      "$lib": ["lib"]
    }
  }
}
